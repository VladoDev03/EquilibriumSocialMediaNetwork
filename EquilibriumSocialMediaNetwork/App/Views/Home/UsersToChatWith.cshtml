@model List<UserViewModel>
@{
    ViewData["Title"] = "Your Chats";
}

<div class="user-posts">
    @foreach (UserViewModel user in Model)
    {
        string name = $"{@user.FirstName} {@user.LastName} ({@user.UserName})";

        <a asp-controller="Conversation" asp-action="Chat" asp-route-id="@user.Id">@name</a>
        <br />
    }
</div>