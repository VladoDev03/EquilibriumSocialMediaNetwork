@model List<FriendRequestViewModel>

@if (Model.Count <= 0)
{
    <h1>You haven't made any request recently.</h1>
}

@foreach (var item in Model)
{
    <p>@item.RequestedTo.FirstName @item.RequestedTo.LastName (@item.RequestedTo.UserName)</p>
    <a class="text-danger" asp-route-id="@item.Id" asp-controller="FriendRequest" asp-action="Delete">Delete</a>
}