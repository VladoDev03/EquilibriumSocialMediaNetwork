@model ConversationViewModel

@{
    ViewData["Title"] = "Home Page";
}

<link href="~/css/chat.css" rel="stylesheet" />
<script src="https://cdnjs.cloudflare.com/ajax/libs/microsoft-signalr/6.0.1/signalr.js" defer></script>
<script src="~/js/messages.js" defer></script>
<script src="~/js/chat.js" defer></script>

<div class="user-posts">
    <div id="chat-wrapper">
        <div id="messages"></div>
        <hr class="message-divider" />
        <div id="send-wrapper">
            <a asp-action="Details" asp-controller="User" asp-route-id="@Model.UserTwoId">@Model.UserTwoFirstName @Model.UserTwoLastName (@Model.UserTwoUserName)</a>
            <p class="hide" id="userTwo">@Model.UserTwoId</p>
            <p class="hide" id="conversation-to-find">@Model.ConversationId</p>
            <input type="text" class="form-control" id="message" placeholder="Type message..." autofocus>
            <button type="button" id="send-button" class="btn btn-info">Send</button>
        </div>
    </div>
</div>

<style>
    .hide {
        display: none;
    }
</style>