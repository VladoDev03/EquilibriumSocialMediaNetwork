@model List<UserFriendViewModel>

<div class="user-posts">
    @if (Model.Count <= 0)
    {
        <h1>You don't have any friends yet.</h1>
    }

    @foreach (var friend in Model)
    {
        string names = $"{friend.Friend.FirstName} {friend.Friend.LastName} ({(friend.Friend.UserName)})";

        <a asp-controller="User" asp-action="Details" asp-route-id="@friend.FriendId">@names</a>
        <a class="text-danger" asp-route-id="@friend.FriendId" asp-controller="Friend" asp-action="RemoveFriend">Remove friend</a>
        <a class="text-success" asp-controller="Conversation" asp-action="Chat" asp-route-id="@friend.FriendId">Chat</a>

        <br />
    }
</div>